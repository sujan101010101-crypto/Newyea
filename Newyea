<script>
/* Start */
const start=document.getElementById("start");
const bgm=document.getElementById("bgm");
const boom=document.getElementById("boom");
start.onclick=()=>{
    start.style.display="none";
    bgm.volume=0.55;
    bgm.play();
};

/* Messages */
const messages=[
"ðŸ’« A new year, a fresh chapter ðŸ’«",
"ðŸŒ¸ Sisam, you make life beautiful ðŸŒ¸",
"ðŸ’– May 2026 be filled with love ðŸ’–",
"âœ¨ Smiles, dreams & warm moments âœ¨",
"ðŸ¥‚ Cheers to us & new memories ðŸ¥‚",
"â¤ï¸ Happy New Year, Sisam â¤ï¸"
];
let i=0;
const msg=document.getElementById("msg");
setInterval(()=>{
    msg.style.opacity=0;
    setTimeout(()=>{
        msg.innerHTML=messages[i%messages.length];
        msg.style.opacity=1;
        i++;
    },800);
},3500);

/* Hearts */
setInterval(()=>{
    const h=document.createElement("div");
    h.className="heart";
    h.innerHTML="ðŸ’–";
    h.style.left=Math.random()*100+"vw";
    h.style.fontSize=15+Math.random()*20+"px";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),8000);
},500);

/* Fireworks */
const canvas=document.getElementById("canvas");
const ctx=canvas.getContext("2d");
resize();
window.onresize=resize;
function resize(){
    canvas.width=innerWidth;
    canvas.height=innerHeight;
}

let fireworks=[],particles=[];
class Firework{
    constructor(){
        this.x=Math.random()*canvas.width;
        this.y=canvas.height;
        this.ty=Math.random()*canvas.height/2;
        this.color=`hsl(${Math.random()*360},100%,70%)`;
    }
    update(){
        this.y-=6;
        if(this.y<=this.ty){
            explode(this.x,this.y,this.color);
            boom.currentTime=0;
            boom.play();
            return false;
        }
        return true;
    }
    draw(){
        ctx.fillStyle=this.color;
        ctx.fillRect(this.x,this.y,3,12);
    }
}
function explode(x,y,color){
    for(let i=0;i<70;i++){
        particles.push({
            x,y,
            vx:(Math.random()-0.5)*6,
            vy:(Math.random()-0.5)*6,
            a:1,
            c:color
        });
    }
}
function animate(){
    ctx.fillStyle="rgba(0,0,0,0.25)";
    ctx.fillRect(0,0,canvas.width,canvas.height);

    if(Math.random()<0.07)fireworks.push(new Firework());

    fireworks=fireworks.filter(f=>{
        f.draw();
        return f.update();
    });

    particles=particles.filter(p=>{
        p.x+=p.vx;
        p.y+=p.vy;
        p.a-=0.02;
        ctx.globalAlpha=p.a;
        ctx.fillStyle=p.c;
        ctx.fillRect(p.x,p.y,3,3);
        ctx.globalAlpha=1;
        return p.a>0;
    });

    requestAnimationFrame(animate);
}
animate();
</script>

